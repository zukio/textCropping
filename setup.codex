#!/bin/bash
set -e

# --- OSパッケージのインストール ---
# Pillowに必要なCライブラリ類（libjpeg, zlibなど）
apt-get update
apt-get install -y python3-dev libjpeg-dev zlib1g-dev libfreetype6-dev \
                   liblcms2-dev libopenjp2-7-dev libtiff-dev libwebp-dev \
                   tk-dev tcl-dev

# --- Python仮想環境作成と有効化 ---
python3 -m venv venv
source venv/bin/activate

# --- pipのアップグレードと依存インストール ---
pip install --upgrade pip
pip install -r requirements.txt
